<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#48A39A"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lbltitulo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:text="MI PRIMERA ACTIVIDAD"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F4EAEA"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_marginVertical="25dp" />

        <TextView
            android:id="@+id/lblusuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="USUARIO:"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="117dp" />

        <EditText
            android:id="@+id/txtusuario"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_marginVertical="19dp" />

        <TextView
            android:id="@+id/lblclave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLAVE:"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="207dp"
            tools:layout_marginVertical="19dp" />

        <EditText
            android:id="@+id/txtclave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="textPersonName|textPassword" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#33909C"
            android:drawableLeft="@android:drawable/ic_lock_lock"
            android:text="OK"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ToggleButton
            android:id="@+id/tglOnOff"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginTop="16dp"
            android:background="#3F51B5"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblresultado"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:background="#97BDBA"
            android:backgroundTint="#6697AE"
            android:gravity="center_horizontal|center_vertical"
            android:text="Resultado"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_marginVertical="19dp" />

        <TextView
            android:id="@+id/lblVer"
            android:layout_width="match_parent"
            android:layout_height="212dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>