<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF4081" /> <!-- Color cuando el botón está presionado -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FF4081" /> <!-- Color cuando el botón está enfocado -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#3F51B5" /> <!-- Color predeterminado del botón -->
            <corners android:radius="8dp" /> <!-- Esquinas redondeadas -->
        </shape>
    </item>
</selector>
