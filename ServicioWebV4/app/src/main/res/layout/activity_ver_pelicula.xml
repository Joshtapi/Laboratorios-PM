<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".verPelicula">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_titulo"
        android:fontFamily="@font/b612"
        android:padding="12dp"
        android:text="Agregar Pelicula"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612"
        android:text="ID"
        android:textColor="#F6F4F4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg_curve"
        android:ems="10"
        android:fontFamily="@font/b612"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lblUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612"
        android:paddingTop="16dp"
        android:text="Nombre"
        android:textColor="#F6F4F4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUsuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg_curve"
        android:ems="10"
        android:fontFamily="@font/b612"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lblCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612"
        android:paddingTop="16dp"
        android:text="Categoría"
        android:textColor="#F6F4F4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/cmbCategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/spinner_bg"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lblClaves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612"
        android:paddingTop="16dp"
        android:text="Duración"
        android:textColor="#F6F4F4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtClaves"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg_curve"
        android:ems="10"
        android:fontFamily="@font/b612"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/lblEstados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/b612"
        android:paddingTop="16dp"
        android:text="Imagen"
        android:textColor="#F6F4F4"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtEstados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg_curve"
        android:ems="10"
        android:fontFamily="@font/b612"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnGuardar"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_bg_curve"
        android:fontFamily="@font/b612"
        android:padding="12dp"
        android:text="Guardar"
        android:textColor="#F6F4F4"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_curve"
            android:fontFamily="@font/b612"
            android:padding="12dp"
            android:text="Editar"
            android:textColor="#F6F4F4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_bg_curve"
            android:fontFamily="@font/b612"
            android:padding="12dp"
            android:text="Eliminar"
            android:textColor="#F6F4F4"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
